<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Furry"
        android:textSize="20sp"
        android:layout_marginTop="18dp"
        android:layout_marginLeft="10dp"
        android:id="@+id/name_txt"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="action"
        android:layout_marginLeft="10dp"
        android:layout_below="@id/name_txt"
        android:layout_marginTop="2dp"
        android:id="@+id/genre_txt"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2015"
        android:layout_marginLeft="10dp"
        android:layout_below="@id/genre_txt"
        android:layout_marginTop="2dp"
        android:id="@+id/year_txt"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="6.0"
        android:layout_marginLeft="10dp"
        android:layout_below="@id/year_txt"
        android:layout_marginTop="2dp"
        android:id="@+id/rating_txt"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="www.http.example"
        android:layout_marginLeft="10dp"
        android:layout_below="@id/rating_txt"
        android:layout_marginTop="2dp"
        android:id="@+id/posterUrl_txt"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="www.http.example"
        android:layout_marginLeft="10dp"
        android:layout_below="@id/posterUrl_txt"
        android:layout_marginTop="2dp"
        android:id="@+id/watchUrl_txt"
        />


</RelativeLayout>